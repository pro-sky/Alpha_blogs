<h1 class="text-center">Create article</h1>
<div class="container">
 <div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors',obj: @article %>
    <%= form_with scope: :article, url: articles_path,class: "shadow p-3 mb-3 bg-info rounded", local: true   do |f| %>
    <div class="form-group row">
      <%= f.label :title ,class: "col-2 col-form-label text-light"%> 
        <div class="col-10">
        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article"%>
        </div>
  </div>
  
    <div class="form-group row">
    <%= f.label :discription,class: "col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= f.text_area :discription, rows: 6,class: "form-control shadow rounded", placeholder: "Description of article" %> 
    </div>
     </div>
     <div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-outline-light btn-lg" %> 
     </div>
     <% end %> 
  </div>
  
</div>
</div>

