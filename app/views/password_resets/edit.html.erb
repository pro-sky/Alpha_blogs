<h1>Password Reset</h1>
<%= form_with model: @user, url: update_password_path(id:@user.reset_token), method: :put do |form| %>
  <!-- Your password reset form fields here -->
  <div class="form-group row">
     <%= form.label :password,class: "col-2 col-form-label text-light" %>
     <div class="col-10">
     <%= form.password_field :password,class: "form-control shadow rounded", placeholder: "Create a password" %> 
     </div>
    </div>
  <%= form.submit "Reset Password" %>
<% end %>